<Window x:Class="systеm32.exe.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:systеm32.exe"
        xmlns:controls="clr-namespace:systеm32.exe.Controls"
        xmlns:viewmodels="clr-namespace:systеm32.exe.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="500" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"></BooleanToVisibilityConverter>
    </Window.Resources>
    <Window.Visibility>
        <Binding Path="IsNotBackgroundProcess"
                 Mode="TwoWay"
                 Converter="{StaticResource BoolToVisibility}"></Binding>
    </Window.Visibility>
    <Viewbox>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <RadioButton Content="Сервер"
                             Margin="5"
                             GroupName="TypeOfApp"
                             IsChecked="{Binding IsServer}"></RadioButton>
                <RadioButton Content="Клиент"
                             Margin="5"
                             IsChecked="True"
                             GroupName="TypeOfApp"></RadioButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Файл для запуска"
                           Margin="5"></TextBlock>
                <Viewbox>
                    <Button Content="{Binding FilePath}"
                        Width="400"
                        Margin="5"
                        Command="{Binding SelectFileCommand}">
                    </Button>
                </Viewbox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Папка файла конфигурации (если конфигурация не найдена, то она будет создана)"
                           Margin="5"></TextBlock>
                <TextBox Text="{Binding ConfigPath}"
                         Width="400"
                         HorizontalAlignment="Right"
                         Margin="5"></TextBox>
            </StackPanel>
            <Button Content="Выбрать папку ..."
                        Width="400"
                        Margin="5"
                        Command="{Binding SelectConfigCommand}"
                        HorizontalAlignment="Right">
            </Button>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Таймаут первого запуска в секундах"
                           Margin="5"></TextBlock>
                <controls:IntegerTextBox Width="400"
                                         Margin="5"
                                         MaxLength="5"
                                         Text="{Binding FirstRunTimeoutInSeconds}"></controls:IntegerTextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Аргументы первого запуска"
                           Margin="5"></TextBlock>
                <TextBox Width="400"
                                         Margin="5"
                                         Text="{Binding FirstRunArgs}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Таймаут второго запуска в секундах"
                           Margin="5"></TextBlock>
                <controls:IntegerTextBox Width="400"
                                         Margin="5"
                                         MaxLength="5"
                                         Text="{Binding SecondRunTimeoutInSeconds}"></controls:IntegerTextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Аргументы последующих запусков"
                           Margin="5">
                </TextBlock>
                <TextBox Width="400"
                                         Margin="5"
                                         Text="{Binding SecondRunArgs}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Таймаут проверки процесса"
                           Margin="5"></TextBlock>
                <controls:IntegerTextBox Width="400"
                                         Margin="5"
                                         MaxLength="5"
                                         Text="{Binding ProcessCheckTimeoutInSeconds}"></controls:IntegerTextBox>
            </StackPanel>
            <CheckBox Content="Запущен в первый раз"
                      HorizontalAlignment="Right"
                      Width="400"
                      Margin="5"
                      IsChecked="{Binding IsRunForFirstTime}"></CheckBox>
            <CheckBox Content="Больше никогда не запускать"
                      HorizontalAlignment="Right"
                      Width="400"
                      Margin="5"
                      IsChecked="{Binding DoNotRunAgain}"></CheckBox>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Сохранить введённые значения"
                        Margin="5"
                        Command="{Binding SaveValuesCommand}"
                        Width="400"></Button>
                <Button Content="Запустить с данными параметрами"
                        Margin="5"
                        Command="{Binding RunFileWatcherCommand}"
                        Width="400"></Button>
            </StackPanel>
        </StackPanel>
    </Viewbox>
</Window>
